@model Prototype.Views.PatientView

@{
    ViewBag.Title = "Edit Patient";
}

<h2>Edit Patient</h2>

<a href="@Url.Action("Index", "Patient")">< Back</a>
<br/>
<br/>

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Patient Information</legend>
            @Html.HiddenFor(m => m.PatientId)

            <div class="editor-label">
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Name)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Initials)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Initials)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Level)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Level)  &larr; Level cannot be lower than current level of Patient
            </div>

            <p>
                <input type="submit" value="Edit" />
                <a href="@Url.Action("Index", "Patient")">Cancel</a>
            </p>
        </fieldset>
    </div>
}