@model Prototype.Web.Models.SubjectPageViewModel

@{
    ViewBag.Title = "Subject History";
}

<h2>Subject History</h2>

<a href="@Url.Action("Index", "Subject")">< Back</a> <br/> <br/>

<table>
    <tr>
        <th>Id</th>
        <th>Version</th>
        <th>Name</th>
        <th>Initials</th>
        <th>Level</th>
        <th>Site</th>
        <th>Actions</th>
    </tr>

    @foreach(var s in Model.Subjects)
    {
        <tr>
            <td style="font-size: 11px; color: #bbbbbb;">@s.SubjectId</td>
            <td>@s.Version</td>
            <td>@s.Name</td>
            <td>@s.Initials</td>
            <td>@s.Level</td>
            <td>@s.SiteName</td>
            <td>
                <a href="@Url.Action("Restore", "Subject", new { id = s.SubjectId, version = s.Version })">Restore</a>
            </td>
        </tr>
    }

</table>